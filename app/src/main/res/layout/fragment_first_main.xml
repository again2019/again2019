<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivityPackage.FirstMainFragment"
    android:orientation="vertical">


    <Button
        android:id="@+id/tmptimerButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="run"/>
    <Button
        android:id="@+id/tmptimerButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pause"/>

    <Button
        android:id="@+id/tmptimerButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop"/>
    <TextView
        android:id="@+id/textView_countdown"
        android:text="10:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/tmpTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="임시 예약 보러가기"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="108dp"
            app:dotsSize="8dp"
            app:dotsColor="@color/colorAccent"
            app:dotsCornerRadius="16dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="@color/colorCategory"
            app:progressMode="true"
            android:layout_centerHorizontal="true"
            tools:ignore="ObsoleteLayoutParam" />

    </LinearLayout>

</LinearLayout>