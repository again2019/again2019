<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Main.Third.ScheduleInputFragment2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="15dp"
            android:layout_height="42dp"
            android:src="@drawable/arrow"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 추가하기"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="17sp" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/bold"
        android:text="목적지를 알려주세요."
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/destinationPlaceEditText"
        style="@style/EditTextType1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="ex) 회사, 학교"
        android:letterSpacing="-0.02"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:letterSpacing="-0.02"
        android:text="시간을 선택해주세요."
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/destinationPlaceEditText"
        app:layout_constraintTop_toBottomOf="@+id/destinationPlaceEditText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:text="가는 시간"
        android:textColor="@color/titleMain"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/home1Button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/medium"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:padding="0dp"
        style="@style/BtnType2"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/titleMain"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/home1Button"
        app:layout_constraintTop_toTopOf="@+id/home1Button" />

    <Button
        android:id="@+id/home2Button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:letterSpacing="-0.02"
        style="@style/BtnType2"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:padding="0dp"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/home1Button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/medium"
        android:letterSpacing="-0.02"
        android:text="오는 시간"
        android:textColor="@color/titleMain"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/dest1Button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        style="@style/BtnType2"
        android:fontFamily="@font/medium"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:padding="0dp"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/titleMain"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/dest1Button"
        app:layout_constraintTop_toTopOf="@+id/dest1Button" />

    <Button
        android:id="@+id/dest2Button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        style="@style/BtnType2"
        android:theme="@style/ShapeAppearanceOverlay.Material3.Button"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/medium"
        android:letterSpacing="-0.02"
        android:gravity="center"
        android:padding="0dp"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/dest1Button" />

    <Button
        android:id="@+id/finishBtn"
        style="@style/BtnType1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="19dp"
        android:text="저장하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>