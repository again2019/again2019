<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomsheet.InputBottomSheet"

    android:orientation="vertical">

    <TextView
        android:text="다음 정보가 맞나요?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타입"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할 일"/>

    <TextView
        android:id="@+id/whatToDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할 일"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:checked="true"
            android:clickable="false"
            android:text="독서"
            android:textAppearance="@style/AppTheme.GenderChip"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:closeIconStartPadding="0dp"
            app:iconEndPadding="0dp"
            app:iconStartPadding="15dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:checked="true"
            android:clickable="false"
            android:text="영어 듣기"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            style="@style/Colors_Widget.MaterialComponents.Chip.Choice"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:checked="true"
            android:clickable="false"
            android:text="시사 공부"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />



    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/okayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="맞습니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아닙니다."
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="209dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:indicatorColor="@color/colorMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />









</androidx.constraintlayout.widget.ConstraintLayout>