<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:src="@drawable/insert_nickname"-->
<!--        ></ImageView>-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:lottie_autoPlay="false"
            app:lottie_rawRes="@raw/progress_bar"
            app:lottie_colorFilter="#3FC2B0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.02"
        android:text="만나서 반가워요!"
        android:textColor="#525C6C"
        android:textSize="22dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용하실"
        android:textSize="22dp"
        android:textColor="#525C6C"
        android:fontFamily="@font/medium"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintStart_toStartOf="@+id/text1"
        ></TextView>
    <TextView
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:textSize="22dp"
        android:textColor="#525C6C"
        android:fontFamily="@font/extrabold"
        android:letterSpacing="0.02"
        android:layout_marginLeft="4dp"
        android:backgroundTint="#9dded5"
        android:background="#9dded5"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@id/text1"
        ></TextView>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="22dp"
        android:textColor="#525C6C"
        android:layout_marginLeft="4dp"
        android:fontFamily="@font/bold"
        android:letterSpacing="0.02"
        app:layout_constraintLeft_toRightOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@id/text1"
        ></TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="을 입력해주세요."
        android:textSize="22dp"
        android:textColor="#525C6C"
        android:fontFamily="@font/medium"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toRightOf="@+id/text3"
        ></TextView>

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#B4BCC4"
        android:fontFamily="@font/medium"
        android:hint="닉네임을 입력해주세요."
        android:paddingBottom="17dp"
        android:textColorHint="#B4BCC4"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text2" />


    <android.widget.Button
        android:id="@+id/loginbtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/btn_line"
        android:backgroundTint="#3FC2B0"
        android:fontFamily="@font/bold"
        android:padding="19dp"
        android:text="다음 단계로 가기"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
